{
  "name": "desktop",
  "version": "1.0.0-SNAPSHOT",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "preview": "vite preview",
    "dev": "NODE_ENV=DEV run-p dev:* start",
    "dev:renderer": "vite",
    "dev:main": "tsc --watch --project tsconfig.main.json",
    "build": "run-p build:*",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.main.json",
    "lint": "eslint src main.ts",
    "format": "yarn check:format --write",
    "code-check": "run-p lint check:*",
    "check:format": "prettier src main.ts index.html --check",
    "check:type": "tsc --project tsconfig.json && tsc --project tsconfig.main.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "electron": "^21.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.8"
  },
  "private": true
}
